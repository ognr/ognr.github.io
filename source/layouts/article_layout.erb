<% wrap_layout :layout do %>

	<% if current_article.data[:header_image] %>
		<%= image_tag(current_article.data[:header_image], width: '100%', class: "img-responsive") %>
	<% end %>

  <section class="post">
    <header class="entry-header">
          <h2 class="entry-title"><%= link_to current_article.title, current_article %></h2>
          <p class="entry-meta">
            Posted on <a class="entry-date" href="#"><%= current_article.date.strftime('%b %e') %></a> | By <a class="entry-author" href="#"><%= current_article.data.author unless current_article.data.author.nil? %></a> 
						| Tags 
							<% current_article.data.tags.split(",").each do |tag| %>
								<a class="label label-<%= cycle("danger", "success", "warning", "info", "primary") -%>" href="<%= tag_path(tag) %>">
									<%= tag %>
								</a>
							<% end %>
          </p>
    </header>
    <div class="entry-description">
			<%= yield %>
    </div>
  </section>
	
	<section>
      <div class="comments">
        <div id="disqus_thread"></div>
        <script type="text/javascript">
            var disqus_shortname = 'ognr'; // required: replace example with your forum shortname

            /*** Don't edit below this line ***/
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      </div>
		</section> <!-- /comments -->					
	
<% end %>