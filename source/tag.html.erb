---
pageable: true
per_page: 12
---

<h1 class="content-head">Tag: <%= tagname %></h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
    <section class="post">
      <header class="entry-header">
        <h2 class="entry-title"><%= link_to article.title, article %></h2>
        <p class="entry-meta">
          Posted on <a class="entry-date" href="#"><%= article.date.strftime('%b %e') %></a> | By <a class="entry-author" href="#"><%= article.data.author unless article.data.author.nil? %></a> 
					| Tags 
						<% article.data.tags.split(",").each do |tag| %>
							<a class="label label-<%= cycle("danger", "success", "warning", "info", "primary") -%>" href="<%= tag_path(tag) %>">
								<%= tag %>
							</a>
						<% end %>
        </p>
      </header>
			
      <div class="entry-description">
        <p>
					  <!-- use article.summary(250) if you have Nokogiri available to show just
					       the first 250 characters -->
					  <%= article.summary %>
						<%= link_to 'Read moreâ€¦', article %>							
        </p>
      </div>
    </section> <!-- /.post -->
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

